<Window x:Class="KorgWindowsVolumeMixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KorgWindowsVolumeMixer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <ListBox x:Name="midiDeviceBox" HorizontalAlignment="Left" Height="100" Margin="10,5,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="midiConnectButton" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="115,5,0,0" Click="midiConnectButton_Click"/>
        <ListBox x:Name="pipListBox" HorizontalAlignment="Left" Height="100" Margin="10,110,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="pipFillButton" Content="Button" HorizontalAlignment="Left" Margin="115,110,0,0" VerticalAlignment="Top" Width="75" Click="pipFillButton_Click"/>
        <Button x:Name="debug" Content="Button" HorizontalAlignment="Left" Margin="115,135,0,0" VerticalAlignment="Top" Width="75" Click="debug_Click"/>


    </Grid>
</Window>
